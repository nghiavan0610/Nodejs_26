<div class='mt-4'>
  <h3>Sửa nhà hàng</h3>

  <form method='POST' enctype="multipart/form-data" action='/restaurants/{{restaurant.slug}}?_method=PUT'>
    <div class='form-group mt-4'>
      <label for='res_name'>Tên nhà hàng</label>
      <input
        type='text'
        class='form-control'
        value='{{restaurant.res_name}}'
        id='res_name'
        name='res_name'
      />
    </div>

    <div class='form-group mt-4'>
      <label for='desc'>Mô tả</label>
      <textarea
        class='form-control'
        id='desc'
        name='desc'
      >{{restaurant.desc}}</textarea>
    </div>

    <div class='form-group mt-4'>
      <label for='videoID'>VideoID</label>
      <input
        type='text'
        class='form-control'
        value='{{restaurant.videoID}}'
        id='videoID'
        name='videoID'
      />
    </div>

    <div class="form-group mt-4">
      <div class="flex-shrink-0">
        <label for="image">Hình ảnh</label>
        <br>
            <img src="data:image/jpeg;base64,{{restaurant.image}}"
              alt="{{restaurant.res_name}}" class="img-fluid"
              style="width: 180px; border-radius: 10px;">
          </div>
      <input type="file" class="form-control-file" id="image" name="image">
    </div>

    
      <input
        type='hidden'
        value='{{restaurant.res_id}}'
        class='form-control'
        id='res_id'
        name='res_id'
      />
    

    <button type='submit' class='btn btn-primary mt-4'>Lưu lại</button>
  </form>

</div>